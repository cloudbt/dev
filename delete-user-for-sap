# Outlook COM オブジェクト作成
$outlook = New-Object -ComObject Outlook.Application

# .msg ファイルを開く
$mail = $outlook.Session.OpenSharedItem($filePath)

# 件名と本文を取得
$subject = $mail.Subject
$body = $mail.Body   # HTML本文が欲しい場合は $mail.HTMLBody

# Power Automate Desktop に返す
# （Write-Outputで順番に出力 → PADで配列として受け取る）
Write-Output $subject
Write-Output $body
